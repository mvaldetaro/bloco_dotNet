@model Gerenciador.Models.Pessoa

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<p>@Html.ActionLink("Voltar", "Index", "Lista")</p>

<form action="/Edicao/Submit" method="POST">
    
    <input type="hidden" class="form-control" name="Id" id="Id" value="@Model.Id">
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input type="text" class="form-control" name="Nome" id="Nome" value="@Model.Nome">
    </div>
    <div class="form-group">
        <label for="Sobrenome">Sobrenome:</label>
        <input type="text" class="form-control" name="Sobrenome" id="Sobrenome" value="@Model.Sobrenome">
    </div>
    <div class="form-group">
        <label for="DtAniversario">Data de Aniversário:</label>
        <input type="text" class="form-control" name="DtAniversario" id="DtAniversario" value="@ViewBag.DataNascimento">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>